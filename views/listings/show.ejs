<% layout("/layout/boilerplate") -%>

<div class="row mt-3">
  <div class="col-6 offset-3 card-title">
    <h3><%= listing.title %></h3>
    <br />
  </div>
  <div class="listing-card col-6 offset-3">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing"
    />
    <div class="card-body">
      <p class="card-text">
        Owned By <i><strong><%= listing.owner.username %></strong></i>
      </p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>

  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn add-btn col-1 offset-3"
      >Edit</a
    >
    <form
      method="post"
      class="col-1"
      action="/listings/<%= listing._id%>?_method=DELETE"
    >
      <button class="btn btn-dark offset-2">Delete</button>
    </form>
  </div>
  <%}%>

  <div class="col-8 offset-3 mt-4 mb-3">
    <hr />
    <% if(currUser) {%>
    <h3>Leave a Review</h3>
    <form
      method="post"
      action="/listings/<%= listing._id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <div class="mt-3 mb-3">
        <div class="mt-3 mb-3">
          <label for="Rating" class="form-label">Rating</label><br/>
          <fieldset class="starability-slot">
            <input
              type="radio"
              name="review[Rating]"
              id="Rating"
              class="input-no-rate"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[Rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[Rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[Rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[Rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[Rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <label>Comments</label><br/>
        <textarea
          name="review[Comment]"
          id="Comment"
          cols="20"
          rows="5"
          class="form-control"
          placeholder="Enter your comments"
          required
        ></textarea>
        <div class="invalid-feedback">write comments</div>
      </div>
      <div>
        <button class="btn btn-outline-dark">Submit</button>
      </div>
    </form>
    <%}%>
    <hr />
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.Rating %>"
          ></p>
          <p class="card-text"><%= review.Comment %></p>
        </div>
        <form
          class="mb-3 mt-2"
          method="post"
          action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE"
        >
          <button class="btn btn-dark btn-sm">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
